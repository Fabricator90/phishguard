{
  "manifest_version": 3,
  "name": "PhishGuard",
  "version": "0.1.0",
  "description": "Login to your PhishGuard account and call the API from a Chrome extension.",
  "action": {
    "default_title": "PhishGuard",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://www.phishguard.shop/*",
    "https://phishguard.shop/*"
  ],
  "background": {
  "permissions": ["storage"]
  }
}